
/// The Base class is imported as Window from widgets.slint.
import { AppWindow } from "widgets.slint";

import { Switch, TabWidget, AboutSlint } from "std-widgets.slint";
import { WifiNetworkPage } from "pages.slint";

import { WifiNetwork } from "viewmodel.slint";

export component MainWindow inherits AppWindow {
    width: 800px;
    height: 600px;
    in property <[WifiNetwork]> wifi_network_model <=> wifi.model;

    callback wifi_refresh;

    TabWidget {
        Tab {
            title: @tr("Wifi");

            wifi := WifiNetworkPage {
                refresh => {
                    root.wifi_refresh();
                }
            }
        }

        Tab {
            title: @tr("About");

            AboutSlint { }
        }
    }
}
