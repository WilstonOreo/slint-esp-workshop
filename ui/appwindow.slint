import { TabWidget } from "std-widgets.slint";

import { AppWindow as Window } from "widgets.slint";
import { TemperaturePage, ScreenBrightnessPage } from "pages.slint";

export global ViewModel {
    in property <WeatherRecord> current;
    in property <[WeatherRecord]> recording;
}

export component AppWindow inherits Window {
    callback screen-brightness-slider-changed <=> screen-brightness-page.screen-brightness-changed;
    status-bar-text: ViewModel.current.timestamp;

    TabWidget {
        Tab {
            title: "Temperature";

            TemperaturePage {}
        }

        Tab {
            title: "Brightness";

            screen-brightness-page := ScreenBrightnessPage {}
        }
    }
}
